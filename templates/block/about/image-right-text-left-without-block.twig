<section class="about-layout3 pb-0">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-6">
                <div class="heading-layout2 mb-30">
                    {% if about.subtitle %}
                    <h3 class="heading__subtitle">{{ about.subtitle }}</h3>
                    {% endif %}
                    <h2 class="heading__title">{{ about.header }}</h2>
                    <p class="heading__desc mb-30">{{ about.description }}</p>
                    {% if about.usp %}
                        {% set usps = about.usp|split("\n") %}
                        <ul class="list-items list-unstyled mb-40">
                            {% for usp in usps %}
                                <li>{{ usp }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div><!-- /.col-lg-6 -->
            <div class="col-sm-12 col-md-12 col-lg-6">
            {% set image = about.image.one() %}
            {% if image %}
                <div class="about__img mb-30">
                    <a href="{{ image.url }}" class="popup-image" rel="group-{{ about.index }}">
                        <img src="{{ image.url }}" alt="{{ image.title }}" class="w-100">
                    </a>
                </div><!-- /.about-img -->
            {% endif %}
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.About Layout 3 -->