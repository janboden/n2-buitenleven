{% if entry.about %}
    {% for k, about in entry.about.all() %}
        <div id="{{ about.index }}">
        {% set remainder = k % 3 %}
        {% if remainder == 0 %}
            {% include 'block/about/image-left-text-right-without-block' %}
        {% elseif remainder == 1 %}
            {% include 'block/about/text-left-image-right-with-block' %}
        {% elseif remainder == 2 %}
            {% include 'block/about/image-right-text-left-without-block' %}
        {% endif %}
        </div>
    {% endfor %}
{% endif %}