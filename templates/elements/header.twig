

<header class="header header-light header-layout1">
    <div class="header-topbar d-none d-xl-block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-md-7 col-lg-7">
                    <div class="d-flex flex-wrap justify-content-between">
                        <ul class="contact-list list-unstyled mb-0 d-flex flex-wrap">
                            <li>
                                <i class="icon-phone"></i><span>Tel:</span>
                                <a href="tel:{{ contactinfo.phone }}">{{ contactinfo.phone }}</a>
                            </li>
                            <li>
                                <i class="icon-envelope"></i><span>Email:</span>
                                <a href="mailto:{{ contactinfo.email }}">{{ contactinfo.email }}</a>
                            </li>
                        </ul>
                    </div>
                </div><!-- /.col-lg-7 -->
                <div class="col-sm-12 col-md-5 col-lg-5 d-flex flex-wrap justify-content-end">
                    {{ craft.navigation.render('topNavigation', {
                        ulClass: 'header-topbar__links d-flex flex-wrap list-unstyled mb-0'
                    }) }}
                    <ul class="social-icons list-unstyled mb-0">
                        {% if contactinfo.facebook %}
                        <li><a href="{{ contactinfo.facebook }}"><i class="fab fa-facebook-f"></i></a></li>
                        {% endif %}
                        {% if contactinfo.instagram %}
                        <li><a href="{{ contactinfo.instagram }}"><i class="fab fa-instagram"></i></a></li>
                        {% endif %}
                        {% if contactinfo.linkedin %}
                            <li><a href="{{ contactinfo.linkedin }}"><i class="fab fa-linkedin"></i></a></li>
                        {% endif %}
                    </ul>
                </div><!-- /.col-lg-5 -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.header-topbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-0">
            <a class="navbar-brand" href="/">
                <img src="/assets/images/N2-buitenleven_logo.jpg" class="logo-dark" alt="logo">
            </a>
            <button class="navbar-toggler" type="button">
                <span class="menu-lines"><span></span></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavigation">
                {% set nodes = craft.navigation.nodes()
                    .handle('mainNavigation')
                    .all() %}

                <ul class="navbar-nav ml-auto">
                    {% nav node in nodes %}
                        <li class="nav__item {% if node.classes | length %}{{ node.classes }}{% endif %} {% if node.hasDescendants %} with-dropdown {% endif %}">
                            <a {% if node.url %}href="{{ node.url }}"{% endif %} class="nav__item-link {% if node.active %}active{% endif %}"{% if node.newWindow %} target="_blank" rel="noopener"{% endif %} {% for attribute in node.customAttributes %}{{ attribute.attribute }}="{{ attribute.value }}"{% endfor %}>
                            {{- node.title -}}
                            </a>

                            {% ifchildren %}
                                <ul class="dropdown-menu">
                                    {% children %}
                                </ul>
                            {% endifchildren %}
                        </li>
                    {% endnav %}
                </ul>

            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav><!-- /.navabr -->
</header><!-- /.Header -->